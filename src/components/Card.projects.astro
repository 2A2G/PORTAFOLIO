<article
  class="group flex rounded-md max-w-sm flex-col overflow-hidden border border-neutral-300 bg-neutral-50 text-neutral-600 dark:border-neutral-700 dark:bg-neutral-900 dark:text-neutral-300"
>
  <div class="h-44 md:h-64 overflow-hidden">
    <img
      src="https://penguinui.s3.amazonaws.com/component-assets/card-img-1.webp"
      class="object-cover transition duration-700 ease-out group-hover:scale-105"
      alt="project image"
    />
  </div>
  <div class="flex flex-col gap-4 p-6">
    <span class="text-sm font-medium">Technologies</span>
    <h3
      class="text-balance text-xl lg:text-2xl font-bold text-neutral-900 dark:text-white"
      aria-describedby="featureDescription"
    >
      Project Title
    </h3>
    <p id="featureDescription" class="text-pretty text-sm">
      Project description goes here.
    </p>
    <div class="flex flex-wrap gap-2 mt-4">
      <span class="bg-cyan-500 text-white py-1 px-2 rounded-full"
        >JavaScript</span
      >
      <span class="bg-green-500 text-white py-1 px-2 rounded-full">Node.js</span
      >
    </div>
    <a
      href="https://github.com/username/repo-name"
      class="mt-4 text-blue-500 hover:text-blue-700"
      target="_blank"
    >
      View on GitHub
    </a>
  </div>
</article>
