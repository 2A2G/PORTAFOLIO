      class="hidden flex-col md:flex md:flex-row md:space-x-8 text-center space-y-4 md:space-y-0 bg-gray-800 md:bg-transparent p-4 md:p-0 absolute top-16 left-0 right-0 md:static md:flex-row md:items-center md:space-x-8 md:text-center border-t-2 border-gray-600 md:border-none"
